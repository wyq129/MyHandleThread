        <activity android:name=".OKGO.OkGoActivity" />
        <activity android:name=".EnventBus.EnventBusActivity" />
        <activity android:name=".EventBusSticky.FirstStickyActivity" />
        <activity android:name=".EventBusSticky.StickyActivity" />
        <activity android:name=".RxJavaDemo.RxJavaDemoActivity" />
